<div class="page-header">
    <h1>User Profile</h1>
</div>
<div>
    <p>
      <strong>Name:</strong>
      <%= @user.first_name + ' ' + @user.last_name %>
    </p>

    <p>
      <strong>Role:</strong>
      <%= @user.role %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @user.phone_number %>
    </p>
</div>



<div>
    <%= link_to 'Edit Profile', edit_user_path(@user)%>
</div>